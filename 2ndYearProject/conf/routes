# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

GET     /index                      controllers.HomeController.index

GET     /home                       controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file               controllers.Assets.versioned(path="/public/", file: Asset)

GET     /login                      controllers.LoginController.login

POST    /login-submit               controllers.LoginController.loginSubmit

GET     /logout                     controllers.LoginController.logout

GET     /register                   controllers.LoginController.register

POST    /register-submit            controllers.LoginController.registerSubmit

GET     /product-list               controllers.ProductController.productList(category:Long?=0L, keyword: String)

GET     /product/:productName      controllers.ProductController.displayProduct(productName: String)

GET     /add-product                controllers.ProductController.addProduct

GET     /updateItem/:id             controllers.ProductController.updateItem(id: Long)

POST    /add-product-submit         controllers.ProductController.addProductSubmit

GET     /deleteItem/:ProductID      controllers.ProductController.deleteItem(ProductID: Long)

# Shopping
GET     /showBasket                 controllers.ShoppingCtrl.showBasket()
GET     /addToBasket/:id            controllers.ShoppingCtrl.addToBasket(id: Long)
GET     /addOne/:itemId             controllers.ShoppingCtrl.addOne(itemId: Long)
GET     /removeOne/:itemId          controllers.ShoppingCtrl.removeOne(itemId: Long)
GET     /emptyBasket                controllers.ShoppingCtrl.emptyBasket()
GET     /placeOrder                 controllers.ShoppingCtrl.placeOrder()
GET     /viewOrder/:id              controllers.ShoppingCtrl.viewOrder(id: Long)
