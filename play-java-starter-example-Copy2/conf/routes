# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public/stylesheets", file: Asset)

GET     /login                      controllers.LoginController.login

#consider having this request as POST instead of GET
GET     /login-submit               controllers.LoginController.loginSubmit

GET     /logout                     controllers.LoginController.logout

GET     /register                   controllers.LoginController.register

GET     /register-submit            controllers.LoginController.registerSubmit

GET      /productList             controllers.ProductController.productList(cat:Long?=0L)

GET     /add-product                controllers.ProductController.addProduct

GET     /add-product-submit         controllers.ProductController.addProductSubmit

GET      /deleteItem/:ProductID     controllers.ProductController.deleteItem(ProductID: Long)

